[flake8]
exclude = 
    # ignore init file
    {{cookiecutter.repo_name}}/__init__.py,
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
# set the max text length
max-line-length = 80
max-doc-length = 80
# set docs string convention
docstring-convention=numpy
